{
    "name": "@metro-ui/live-tiles",
    "version": "0.0.1",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "type": "module",
    "packageManager": "pnpm@10.14.0",
    "engines": {
        "node": ">=24.0.0"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts"
        },
        "./**/*": {
            "import": "./dist/**/*.js",
            "types": "./dist/**/*.d.ts"
        }
    },
    "scripts": {
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watchAll",
        "build": "tsup",
        "typecheck": "tsc --noEmit",
        "prettier": "prettier **/src/**/*.{ts,tsx} --check",
        "format": "concurrently pnpm:format:*",
        "format:prettier": "prettier --write \"./**/*.{cjs,mjs,ts,tsx,scss,json}\"",
        "generate": "concurrently pnpm:generate:*"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "24.1.0",
        "concurrently": "9.2.0",
        "dotenv-cli": "10.0.0",
        "glob": "11.0.3",
        "prettier": "3.6.2",
        "tsup": "8.5.0",
        "typescript": "5.9.2"
    }
}
