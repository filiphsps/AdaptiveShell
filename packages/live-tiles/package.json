{
    "name": "@metro-ui/live-tiles",
    "version": "0.0.0",
    "private": false,
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "type": "module",
    "packageManager": "pnpm@10.28.0",
    "engines": {
        "node": ">=24.0.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts"
        },
        "./**/*": {
            "import": "./dist/**/*.js",
            "types": "./dist/**/*.d.ts"
        }
    },
    "scripts": {
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watchAll",
        "build": "tsup",
        "typecheck": "tsc --noEmit",
        "lint": "biome lint .",
        "format": "biome format --write .",
        "check": "biome check .",
        "check:fix": "biome check --write ."
    },
    "dependencies": {},
    "devDependencies": {
        "@jest/globals": "30.2.0",
        "@types/jest": "29.5.14",
        "@types/node": "24.10.9",
        "dotenv-cli": "11.0.0",
        "glob": "13.0.0",
        "jest": "29.7.0",
        "ts-jest": "29.4.6",
        "tsup": "8.5.1",
        "typescript": "5.9.3"
    }
}
