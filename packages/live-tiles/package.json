{
    "name": "@metro-ui/live-tiles",
    "version": "0.0.0",
    "private": false,
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "type": "module",
    "packageManager": "pnpm@10.22.0",
    "engines": {
        "node": ">=24.0.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts"
        },
        "./**/*": {
            "import": "./dist/**/*.js",
            "types": "./dist/**/*.d.ts"
        }
    },
    "scripts": {
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watchAll",
        "build": "tsup",
        "typecheck": "tsc --noEmit",
        "lint": "eslint",
        "prettier": "prettier **/src/**/*.{ts,tsx} --check",
        "format:eslint": "eslint --fix",
        "format:prettier": "prettier --write \"./**/*.{cjs,mjs,ts,tsx,scss,json}\""
    },
    "dependencies": {},
    "devDependencies": {
        "@jest/globals": "30.2.0",
        "@types/jest": "29.5.14",
        "@types/node": "24.10.1",
        "@typescript-eslint/eslint-plugin": "8.47.0",
        "@typescript-eslint/parser": "8.47.0",
        "concurrently": "9.2.1",
        "dotenv-cli": "11.0.0",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-unused-imports": "4.3.0",
        "eslint": "9.39.1",
        "glob": "11.1.0",
        "jest": "29.7.0",
        "prettier": "3.6.2",
        "ts-jest": "29.4.5",
        "tsup": "8.5.1",
        "typescript": "5.9.3"
    }
}
