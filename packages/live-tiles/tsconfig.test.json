{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["../../tsconfig.test.json", "./tsconfig.json"],
    "references": [
        {
            "path": "./tsconfig.json"
        },
        {
            "path": "./packages/live-tiles/tsconfig.json"
        }
    ],
    "compilerOptions": {
        "jsx": "react",
        "isolatedModules": true,
        "moduleResolution": "node",
        "types": ["react", "jest"],
        "lib": ["DOM", "ESNext"],
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["metro.config.cjs", "src/**/*.test.*", "eslint.config.mjs"],
    "exclude": ["build", "node_modules"]
}
