<Window
    x:Class="AdaptiveShell.LauncherWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdaptiveShell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{ThemeResource SystemAccentColor}" />
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Foreground="{ThemeResource SystemAltHighColor}" TextAlignment="Center">
                Adaptive Shell (PREVIEW)
            </TextBlock>
            <ProgressBar IsIndeterminate="True" Foreground="{ThemeResource SystemAltHighColor}" Margin="15" />
        </StackPanel>
    </Grid>
</Window>
