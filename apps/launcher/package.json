{
    "name": "@metro-ui/launcher",
    "version": "0.0.0",
    "private": true,
    "main": "index.ts",
    "packageManager": "pnpm@10.15.0",
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "test": "dotenv -c -- jest --passWithNoTests",
        "test:watch": "dotenv -c -- jest --watchAll",
        "start": "dotenv -c -- expo start",
        "build": "dotenv -c -- expo prebuild",
        "android": "dotenv -c -- expo run:android",
        "ios": "dotenv -c -- expo run:ios",
        "web": "dotenv -c -- expo start --web",
        "lint": "expo lint",
        "typecheck": "tsc --noEmit",
        "prettier": "prettier **/src/**/*.{ts,tsx} --check",
        "format:eslint": "eslint --fix",
        "format:prettier": "prettier --write \"./**/*.{cjs,mjs,ts,tsx,scss,json}\""
    },
    "jest": {
        "collectCoverage": true,
        "coverageProvider": "v8",
        "coverageReporters": [
            "json"
        ],
        "collectCoverageFrom": [
            "./src/**/*.*",
            "!**/node_modules/**"
        ],
        "preset": "jest-expo",
        "transformIgnorePatterns": [
            "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "tsconfig": "./tsconfig.test.json"
                }
            ]
        }
    },
    "dependencies": {
        "@bacons/text-decoder": "0.0.0",
        "@expo/vector-icons": "14.1.0",
        "@metro-ui/live-tiles": "workspace:*",
        "@react-navigation/bottom-tabs": "7.4.6",
        "@react-navigation/elements": "2.6.3",
        "@react-navigation/native": "7.1.17",
        "@shopify/flash-list": "2.0.2",
        "@tanstack/react-query": "5.85.5",
        "clsx": "2.1.1",
        "expo-application": "6.1.5",
        "expo-blur": "14.1.5",
        "expo-constants": "17.1.7",
        "expo-dev-client": "5.2.4",
        "expo-font": "13.3.2",
        "expo-haptics": "14.1.4",
        "expo-image": "2.4.0",
        "expo-linking": "7.1.7",
        "expo-localization": "16.1.6",
        "expo-router": "5.1.4",
        "expo-splash-screen": "0.30.10",
        "expo-status-bar": "2.2.3",
        "expo-symbols": "0.4.5",
        "expo-system-ui": "5.0.10",
        "expo": "53.0.20",
        "i18next": "25.3.6",
        "lodash": "4.17.21",
        "nativewind": "4.1.23",
        "react-dom": "19.0.0",
        "react-i18next": "15.6.1",
        "react-native-gesture-handler": "2.28.0",
        "react-native-keyboard-controller": "1.18.2",
        "react-native-reanimated": "3.17.4",
        "react-native-safe-area-context": "5.6.0",
        "react-native-screens": "4.14.1",
        "react-native": "0.79.5",
        "react": "19.0.0",
        "tailwind-merge": "3.3.1",
        "tailwindcss": "3.4.17"
    },
    "devDependencies": {
        "@babel/core": "7.28.3",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.33.0",
        "@jest/globals": "30.0.5",
        "@testing-library/react-native": "13.1.1",
        "@types/jest": "29.5.14",
        "@types/lodash": "4.17.20",
        "@types/node": "24.3.0",
        "@types/react": "19.1.10",
        "@typescript-eslint/eslint-plugin": "8.40.0",
        "@typescript-eslint/parser": "8.40.0",
        "babel-plugin-react-compiler": "19.1.0-rc.2",
        "babel-preset-expo": "13.2.3",
        "dotenv-cli": "10.0.0",
        "eslint-config-expo": "9.2.0",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react-compiler": "19.1.0-rc.2",
        "eslint-plugin-unused-imports": "4.2.0",
        "eslint": "9.33.0",
        "expo-module-scripts": "4.1.10",
        "jest-expo": "53.0.9",
        "jest": "29.7.0",
        "prettier-eslint": "16.4.2",
        "prettier-plugin-tailwindcss": "0.6.14",
        "prettier": "3.6.2",
        "react-native-svg-transformer": "1.5.1",
        "ts-jest": "29.4.1",
        "ts-node": "10.9.2",
        "typescript": "5.9.2"
    }
}
