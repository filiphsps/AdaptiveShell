{
    "name": "@metro-ui/metro",
    "private": true,
    "packageManager": "pnpm@10.18.2",
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "prepare": "husky",
        "precommit": "lint-staged",
        "create": "turbo gen",
        "test": "dotenv -c -- turbo run test && pnpm run coverage:merge",
        "start": "dotenv -c -- expo start",
        "build": "dotenv -c -- turbo run build --env-mode=loose",
        "build:packages": "dotenv -c -- turbo run build --filter=./packages/* --env-mode=loose",
        "lint": "turbo run lint --",
        "typecheck": "turbo run typecheck --",
        "prettier": "turbo run prettier",
        "format": "concurrently pnpm:format:*",
        "format:eslint": "turbo run format:eslint --",
        "format:prettier": "turbo run format:prettier --",
        "coverage:merge": "istanbul-merge --out coverage/coverage-final.json ./packages/**/coverage/coverage-final.json ./apps/**/coverage/coverage-final.json && nyc report --reporter=html --reporter=text --reporter=lcov --reporter=clover --report-dir=coverage --temp-dir=coverage",
        "version": "changeset version",
        "version:unstable": "changeset version --snapshot unstable",
        "release": "changeset publish",
        "release:unstable": "changeset publish --snapshot --no-git-tag --tag unstable",
        "changeset": "changeset",
        "changeset:conventional": "changeset-conventional",
        "docs": "typedoc"
    },
    "contributors": [
        {
            "name": "Filiph Sandstr√∂m",
            "email": "filfat@hotmail.se",
            "url": "https://github.com/filiphsps"
        }
    ],
    "workspaces": [
        "apps/**",
        "packages/**"
    ],
    "lint-staged": {
        "*.{ts,tsx}": [
            "pnpm run format:eslint --",
            "pnpm run format:prettier --"
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "2.29.7",
        "@changesets/types": "6.1.0",
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@types/node": "24.7.1",
        "@typescript-eslint/eslint-plugin": "8.46.0",
        "@typescript-eslint/parser": "8.46.0",
        "changeset-conventional-commits": "0.2.5",
        "concurrently": "9.2.1",
        "dotenv-cli": "10.0.0",
        "husky": "9.1.7",
        "istanbul-merge": "2.0.0",
        "lint-staged": "16.2.3",
        "nyc": "17.1.0",
        "turbo-ignore": "2.5.8",
        "turbo": "2.5.8",
        "typedoc-material-theme": "1.4.0",
        "typedoc-plugin-dt-links": "2.0.22",
        "typedoc-plugin-extras": "4.0.1",
        "typedoc-plugin-inline-sources": "1.3.0",
        "typedoc-plugin-merge-modules": "7.0.0",
        "typedoc-plugin-missing-exports": "4.1.0",
        "typedoc-plugin-rename-defaults": "0.7.3",
        "typedoc": "0.28.13",
        "typescript": "5.9.3"
    },
    "pnpm": {
        "overrides": {
            "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin",
            "@typescript-eslint/parser": "$@typescript-eslint/parser",
            "typescript": "$typescript"
        }
    }
}
