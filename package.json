{
    "name": "@metro-ui/metro",
    "version": "0.0.1",
    "main": "index.ts",
    "packageManager": "pnpm@10.14.0",
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "prepare": "husky",
        "precommit": "lint-staged",
        "postinstall": "pnpm run generate",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watchAll",
        "start": "dotenv -c -- expo start",
        "build": "dotenv -c -- expo prebuild",
        "build:packages": "dotenv -c -- pnpm run --filter=live-tiles build",
        "android": "dotenv -c -- expo run:android",
        "ios": "dotenv -c -- expo run:ios",
        "web": "dotenv -c -- expo start --web",
        "lint": "expo lint",
        "typecheck": "tsc --noEmit",
        "prettier": "prettier **/src/**/*.{ts,tsx} --check",
        "format": "concurrently pnpm:format:*",
        "format:eslint": "eslint --fix **/src/**/*.{tsx,ts,tsx}",
        "format:prettier": "prettier --write \"./**/*.{cjs,mjs,ts,tsx,scss,json}\"",
        "generate": "concurrently pnpm:generate:*"
    },
    "jest": {
        "preset": "jest-expo",
        "transformIgnorePatterns": [
            "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "pnpm format:eslint",
            "pnpm format:prettier"
        ]
    },
    "dependencies": {
        "@bacons/text-decoder": "0.0.0",
        "@expo/vector-icons": "14.1.0",
        "@react-navigation/bottom-tabs": "7.4.4",
        "@react-navigation/elements": "2.6.1",
        "@react-navigation/native": "7.1.16",
        "@shopify/flash-list": "2.0.1",
        "@tanstack/react-query": "5.84.1",
        "clsx": "2.1.1",
        "expo": "53.0.20",
        "expo-application": "6.1.5",
        "expo-blur": "14.1.5",
        "expo-constants": "17.1.7",
        "expo-dev-client": "5.2.4",
        "expo-font": "13.3.2",
        "expo-haptics": "14.1.4",
        "expo-image": "2.4.0",
        "expo-linking": "7.1.7",
        "expo-localization": "16.1.6",
        "expo-router": "5.1.4",
        "expo-splash-screen": "0.30.10",
        "expo-status-bar": "2.2.3",
        "expo-symbols": "0.4.5",
        "expo-system-ui": "5.0.10",
        "i18next": "25.3.2",
        "lodash": "4.17.21",
        "nativewind": "4.1.23",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-i18next": "15.6.1",
        "react-native": "0.79.5",
        "react-native-gesture-handler": "2.27.2",
        "react-native-keyboard-controller": "1.18.2",
        "react-native-reanimated": "3.17.4",
        "react-native-safe-area-context": "5.5.2",
        "react-native-screens": "4.13.1",
        "tailwind-merge": "3.3.1",
        "tailwindcss": "3.4.17"
    },
    "devDependencies": {
        "@babel/core": "7.28.0",
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "19.8.1",
        "@jest/globals": "30.0.5",
        "@testing-library/react-native": "13.1.1",
        "@types/jest": "29.5.14",
        "@types/lodash": "4.17.20",
        "@types/node": "24.1.0",
        "@types/react": "19.1.9",
        "babel-plugin-react-compiler": "19.1.0-rc.2",
        "babel-preset-expo": "13.2.3",
        "concurrently": "9.2.0",
        "dotenv-cli": "10.0.0",
        "eslint-config-expo": "9.2.0",
        "eslint-plugin-prettier": "5.5.3",
        "eslint-plugin-react-compiler": "19.1.0-rc.2",
        "eslint-plugin-unused-imports": "4.1.4",
        "eslint": "9.32.0",
        "expo-module-scripts": "4.1.9",
        "husky": "9.1.7",
        "jest-expo": "53.0.9",
        "jest": "29.7.0",
        "lint-staged": "16.1.2",
        "prettier-eslint": "16.4.2",
        "prettier-plugin-tailwindcss": "0.6.14",
        "prettier": "3.6.2",
        "react-native-svg-transformer": "1.5.1",
        "ts-node": "10.9.2",
        "typescript": "5.9.2"
    }
}
